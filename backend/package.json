{
	"name": "backend",
	"version": "1.0.0",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"watch": "tsc --watch",
		"build": "tsc",
		"deploy:dev": "pnpm run build && firebase deploy --only functions --project dev",
		"deploy:prod": "pnpm run build && firebase deploy --only functions --project prod",
		"serve:dev": "firebase emulators:start --only functions --project dev",
		"serve:prod": "firebase emulators:start --only functions --project prod"
	},
	"devDependencies": {
		"@try-finger/lib": "file:../lib",
		"firebase-tools": "11.8.0",
		"typescript": "4.8.2"
	},
	"dependencies": {
		"ajv": "^8.11.0",
		"deep-object-diff": "^1.1.7",
		"firebase-admin": "^11.0.1",
		"firebase-functions": "3.23.0"
	},
	"pnpm": {
		"peerDependencyRules": {
			"ignoreMissing": [
				"@firebase/app-types"
			]
		}
	}
}
