rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;

      match /users/{userId} {
     		allow get: if true;
        
        match /joinedChats/{chatId} {
     			allow get: if true;
      	}
      }

      match /rooms/{roomId} {
        allow write: if true;
      }
    }
  }
}